<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.ListHadist.DaftarHadist.SubDaftarHadist.ListHadistAkhlaqiyaat">

    <FrameLayout
        android:id="@+id/TitleHadist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gambardoa"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/JudulHadistAkhlaqiyaat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hadits Akhlaqiyaat "
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:fontFamily="@font/century1"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/HadistAkhlaqiyaat"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:fontFamily="@font/century1"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:justificationMode="inter_word"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hadist_akhlaqiyaat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleHadist"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/item_list_hadist_akhlaqiyaat" />

</RelativeLayout>